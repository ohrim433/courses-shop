<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Sign in</a></li>
                <li class="tab col s6"><a href="#register">Sign up</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h1>Enter to the shop</h1>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Please enter your email"></span>
                </div>
                <div class="input-field">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Please enter your password"></span>
                </div>
                <button class="btn btn-primary" type="submit">Sign in</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h1>Create an account</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="reg-email" name="email" type="email" class="validate" required>
                    <label for="reg-email">Email</label>
                    <span class="helper-text" data-error="Please enter your email"></span>
                </div>
                <div class="input-field">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Please enter your name"></span>
                </div>
                <div class="input-field">
                    <input id="reg-password" name="password" type="password" class="validate" required>
                    <label for="reg-password">Password</label>
                    <span class="helper-text" data-error="Please enter your password"></span>
                </div>
                <div class="input-field">
                    <input id="confirm-password" name="confirm-password" type="password" class="validate" required>
                    <label for="confirm-password">Password once again</label>
                    <span class="helper-text" data-error="Please enter your password again"></span>
                </div>
                <button class="btn btn-primary" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</div>
